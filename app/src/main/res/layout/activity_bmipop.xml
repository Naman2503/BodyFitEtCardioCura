<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#2af4dc">


    <TextView
        android:id="@+id/tb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BMI Info"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="25dp"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_below="@+id/tb1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Severely underweight"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#000" />

            <TextView
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:id="@+id/t2" />



            <TextView
                android:id="@+id/t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/t2"
                android:text="Underweight"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#000" />

            <TextView
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:id="@+id/t4" />



            <TextView
                android:id="@+id/t5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Normal"
                android:layout_below="@+id/t4"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#000" />

            <TextView
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:id="@+id/t6" />



            <TextView
                android:id="@+id/t7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Overweight"
                android:layout_below="@+id/t6"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#000" />

            <TextView
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t7"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:id="@+id/t8" />



            <TextView
                android:id="@+id/t9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Obesity"
                android:layout_below="@+id/t8"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#000" />

            <TextView
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t9"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:id="@+id/t10" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
