<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hifnd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.naman.bodyfitetcardiocura.HIFND"
    android:background="@drawable/normaldd">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/hft1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NORMAL DIET"
                android:layout_centerHorizontal="true"
                android:textSize="30dp"
                android:textStyle="bold|italic"
                android:textColor="#000" />

            <Button
                android:text="Day1"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginTop="57dp"
                android:layout_below="@+id/hft1"
                android:background="#9ca1a1"
                android:textSize="25dp"
                android:id="@+id/hifnd1"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true" />

            <Button
                android:text="Day2"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="#656862"
                android:textSize="25dp"
                android:id="@+id/hifnd2"
                android:layout_below="@+id/hifnd1"
                android:layout_alignStart="@+id/hifnd1"
                android:layout_alignParentEnd="true" />

            <Button
                android:text="Day3"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/hifnd3"
                android:textSize="25dp"
                android:background="#9ca1a1"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/hifnd2"
                android:layout_alignStart="@+id/hifnd2"
                android:layout_alignParentEnd="true" />

            <Button
                android:text="Day4"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="#656862"
                android:textSize="25dp"
                android:id="@+id/hifnd4"
                android:layout_below="@+id/hifnd3"
                android:layout_alignStart="@+id/hifnd3"
                android:layout_alignParentEnd="true" />

            <Button
                android:text="Day5"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="#9ca1a1"
                android:textSize="25dp"
                android:id="@+id/hifnd5"
                android:layout_below="@+id/hifnd4"
                android:layout_alignStart="@+id/hifnd4"
                android:layout_alignParentEnd="true" />

            <Button
                android:text="Day6"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/hifnd6"
                android:textSize="25dp"
                android:background="#656862"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/hifnd5"
                android:layout_alignStart="@+id/hifnd5"
                android:layout_alignParentEnd="true" />

            <Button
                android:text="Day7"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_below="@+id/hifnd6"
                android:background="#9ca1a1"
                android:textSize="25dp"
                android:layout_alignStart="@+id/hifnd6"
                android:layout_marginTop="10dp"
                android:id="@+id/hifnd7"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
