<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lnr">

    <HorizontalScrollView
        android:id="@+id/scrollh"
        android:layout_marginTop="90dp"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/slide"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="365dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/slider1"/>

            <ImageView
                android:layout_width="365dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/slider2"/>

            <ImageView
                android:layout_width="365dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/slider3"/>

            <ImageView
                android:layout_width="365dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/slider4"/>

            <ImageView
                android:layout_width="365dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/slider5"/>

        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/slidedot"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="155dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:textColor="#f2f0f0"
        android:textStyle="bold"
        android:text="....."/>


    <Button
        android:id="@+id/lbt"
        android:layout_below="@+id/scrollh"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:text="Login"
        android:background="#f1ee4e"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/rbt"
        android:layout_below="@+id/scrollh"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentRight="true"
        android:text="Register"
        android:textSize="20dp"
        android:background="#f1ee4e"
        android:textStyle="bold"/>

</RelativeLayout>