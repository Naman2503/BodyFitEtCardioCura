<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_contactpop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#2af4dc"
    tools:context="com.example.naman.bodyfitetcardiocura.Contactpop">


    <ImageView
        android:id="@+id/ci1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_email_black_24dp" />

    <TextView
        android:id="@+id/ct1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ci1"
        android:layout_marginLeft="10dp"
        android:text="Email"
        android:textSize="20dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/ct2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="gupta.naman2503@gmail.com"
        android:layout_below="@+id/ct1"
        android:layout_toRightOf="@+id/ci1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/ct3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="saurav.ojha101@gmail.com"
        android:layout_below="@+id/ct2"
        android:layout_toRightOf="@+id/ci1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:textStyle="bold"/>


    <ImageView
        android:id="@+id/cp1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_contact_phone_black_24dp"
        android:layout_below="@+id/ct3"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/cpt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ci1"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/ct3"
        android:layout_marginTop="20dp"
        android:text="Contact Number"
        android:textSize="20dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/cpt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+91-9598541000"
        android:layout_below="@+id/cpt1"
        android:layout_toRightOf="@+id/ci1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/cpt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+91-8754516919"
        android:layout_below="@+id/cpt2"
        android:layout_toRightOf="@+id/ci1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:textStyle="bold"/>


    <ImageView
        android:id="@+id/ca1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_insert_invitation_black_24dp"
        android:layout_below="@+id/cpt3"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/cat1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ci1"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/cpt3"
        android:layout_marginTop="20dp"
        android:text="Address"
        android:textSize="20dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/cat2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/cat1"
        android:layout_toRightOf="@+id/ci1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textStyle="bold"/>

</RelativeLayout>
